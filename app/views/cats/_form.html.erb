<% action = (cat.persisted? ? cat_url(cat) : cats_url) %>
<% method = (cat.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
    <input type="hidden" name="_method" value="<%= method %>">

    <label>Name</label>
    <input 
        type="text"
        name="cat[name]"
        id="cat_name"
        value= "<%= cat.name%>"
    >
    <label>Birth Date </label>
    <input
        type="text"
        name="cat[birth_date]"
        id="cat_birth_date"
        value= "<%= cat.birth_date %>"
    >
    <input
        type="radio"
        name="cat[sex]"
        id="cat_sex_male"
        value="M"
        <%= cat.sex == "M" ? "checked" : "" %>
    >
    <label>Color</label>
    <select name="cat[color]" id="cat_color">
    <option disabled selected value="">Select a Color</option>
        <% Cat::CAT_COLORS.each do |color| %>
            <option 
            <%= cat.color == color ? "SELECTED" : "" %>
            value="<%= color %>">
            <%= color.upcase %> 
            </option>
        <%end%>
    </select>
    <label>M</label>
    <input
        type="radio"
        name="cat[sex]"
        id="cat_sex_female"
        value="F"
        <%= cat.sex == "F" ? "checked" : "" %>
    >
    <label>F</label>
    <br>

    <label>Description
        <textarea name="cat[description]"><%= cat.description%> </textarea>
    </label>

      <% submit_text = (cat.persisted? ? 'Update' : 'Create') + ' cat!' %>
    <input type="submit" value="<%= submit_text %>">


</form>